@model SV20T1020451.DomainModels.ProductPhoto
@{
    ViewBag.Title = "Bổ sung ảnh";
}
<div class="box box-primary">


    <div class="box-body">
        <form class="form-horizontal" action="~/Product/Photo" method="method">
                <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="macbook.png" />
                    <img id="Photo" src="~/images/Products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả ảnh</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" value="@Model.Description">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="number">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label><input type="checkbox" value="hidden" checked name="IsDisplay">@(Model.IsHidden?"Hiển thị":"Không hiển thị ảnh")</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Add
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductID">
                        Quay lại
                    </a>
                </div>
            </div>

             

 
             
        </form>
    </div>

</div>
